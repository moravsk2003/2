<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="match_parent"
    android:background="#FFF3E0"
    android:padding="20dp"> <TextView
    android:id="@+id/welcomeText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Заходи в Dota 2!"
    android:textSize="30sp"
    android:textColor="#E60000"
    android:textStyle="italic"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/centerImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/dota"
        android:layout_centerInParent="true"
        android:background="#E2E2E2"
        android:padding="10dp"/>

    <CheckBox
        android:id="@+id/subscribeCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Закинути в біблоотеку"
        android:textColor="#FF0000"
        android:textSize="16sp"
        android:layout_below="@id/centerImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/continueButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="НЕ РОБИ ЦЬОГО НЕ ТГРАЙ В ЦЕ"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:backgroundTint="#EF6C00"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"/>

</RelativeLayout>